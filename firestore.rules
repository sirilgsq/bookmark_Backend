rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Bookmarks collection - user-based isolation
    match /bookmarks/{userId}/groups/{groupId} {
      // Only the owner can read/write their groups
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Bookmarks within each group
      match /items/{bookmarkId} {
        // Only the owner can read/write their bookmarks
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Legacy bookmarks collection - deny all access (for migration)
    match /bookmarks/{document=**} {
      allow read, write: if false;
    }
  }
}
